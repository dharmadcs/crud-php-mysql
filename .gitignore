# ===========================================
# SISTEM MANAJEMEN PRODUK MULTI-KATEGORI
# Git Ignore Rules
# ===========================================

# Environment files (contain sensitive data)
.env
.env.local
.env.production
.env.staging

# Composer dependencies
/vendor/
/composer.lock

# Node.js dependencies (if any)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# PHP Error logs
*.log
logs/
error_log

# Database files (local development)
*.db
*.sqlite
*.sqlite3

# Upload directories (user uploaded content)
/uploads/*
!/uploads/.gitkeep
!/uploads/index.php

# Cache directories
/cache/
/tmp/
/temp/

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Backup files
*.bak
*.backup
*.old
*.orig

# Test files
/tests/
/phpunit.xml

# Documentation builds
/docs/build/
/docs/.doctrees/

# Deployment files
deploy.sh
docker-compose.override.yml

# Temporary files
*.tmp
*.temp

# Test files (remove after testing)
test-env.php
test-db.php

# ===========================================
# SECURITY NOTES:
# ===========================================
# - Never commit .env files (they contain passwords)
# - Never commit database files with real data
# - Never commit private keys or certificates
# - Review all files before committing
# ===========================================
