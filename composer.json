{
    "name": "dharmadcs/crud-php-mysql",
    "description": "Sistem Manajemen Produk Multi-Kategori - PHP & MySQL CRUD Application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "LAB 5 Development Team",
            "email": "lab5@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-mysqli": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8080 -t .",
        "setup": [
            "@composer install",
            "cp .env.example .env",
            "echo 'Please edit .env file with your database credentials'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "prefer-stable": true,
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
